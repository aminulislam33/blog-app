<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>Home Page</title>
</head>

<body>
    <%- include("./partials/nav") %>

        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImage %>" width="700px">
            <p>
            <pre><%= blog.body %></pre>
            </p>
        </div>

        <div class="container mt-4">
            <img src="<%= blog. createdBy.profileImageURL %>" width="50px">
            <%= blog.createdBy.fullName %>
        </div>

        <% if (locals.user) { %>
            <div class="container mt-4">
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Comments(<%= comments.length %>)</label>
                        <input name="content" type="text" class="form-control" id="exampleInputEmail1"
                            placeholder="Enter your comments here" aria-describedby="emailHelp">
                    </div>
                    <button class="btn btn-sm btn-primary" type="submit">Add Comment</button>
                </form>
            </div>
            <% } %>
            <div class="mt-3">
                <% comments.forEach(comment=> { %>
                    <img src="<%= blog. createdBy.profileImageURL %>" width="50px">
                    <%= blog.createdBy.fullName %>
                        <pre><%= comment.content %></pre>
                        <% }) %>
            </div>

                <%- include("./partials/scripts") %>
</body>

</html>